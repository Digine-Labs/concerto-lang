{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Concerto",
  "scopeName": "source.concerto",
  "patterns": [
    { "include": "#comments" },
    { "include": "#decorators" },
    { "include": "#declarations" },
    { "include": "#constants" },
    { "include": "#strings" },
    { "include": "#numbers" },
    { "include": "#keywords" },
    { "include": "#types" },
    { "include": "#function-calls" },
    { "include": "#operators" },
    { "include": "#punctuation" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.documentation.concerto",
          "match": "///.*$"
        },
        {
          "name": "comment.line.double-slash.concerto",
          "match": "//.*$"
        },
        { "include": "#block-comment" }
      ]
    },

    "block-comment": {
      "name": "comment.block.concerto",
      "begin": "/\\*",
      "end": "\\*/",
      "beginCaptures": {
        "0": { "name": "punctuation.definition.comment.begin.concerto" }
      },
      "endCaptures": {
        "0": { "name": "punctuation.definition.comment.end.concerto" }
      },
      "patterns": [
        { "include": "#block-comment" }
      ]
    },

    "decorators": {
      "patterns": [
        {
          "name": "meta.decorator.concerto",
          "begin": "(@)([a-zA-Z_][a-zA-Z0-9_]*)\\s*(\\()",
          "end": "\\)",
          "beginCaptures": {
            "1": { "name": "punctuation.decorator.concerto" },
            "2": { "name": "entity.name.function.decorator.concerto" },
            "3": { "name": "punctuation.definition.arguments.begin.concerto" }
          },
          "endCaptures": {
            "0": { "name": "punctuation.definition.arguments.end.concerto" }
          },
          "patterns": [
            { "include": "#strings" },
            { "include": "#numbers" },
            { "include": "#constants" }
          ]
        },
        {
          "match": "(@)([a-zA-Z_][a-zA-Z0-9_]*)",
          "captures": {
            "1": { "name": "punctuation.decorator.concerto" },
            "2": { "name": "entity.name.function.decorator.concerto" }
          }
        }
      ]
    },

    "declarations": {
      "patterns": [
        {
          "comment": "Function declaration: fn name",
          "match": "\\b(fn)\\s+([a-zA-Z_][a-zA-Z0-9_]*)",
          "captures": {
            "1": { "name": "keyword.declaration.function.concerto" },
            "2": { "name": "entity.name.function.concerto" }
          }
        },
        {
          "comment": "Type-level declarations: model, tool, schema, pipeline, mcp, agent",
          "match": "\\b(model|tool|schema|pipeline|mcp|agent)\\s+([A-Za-z_][A-Za-z0-9_]*)",
          "captures": {
            "1": { "name": "keyword.declaration.concerto" },
            "2": { "name": "entity.name.type.concerto" }
          }
        },
        {
          "comment": "Struct/enum/trait declaration",
          "match": "\\b(struct|enum|trait)\\s+([A-Za-z_][A-Za-z0-9_]*)",
          "captures": {
            "1": { "name": "keyword.declaration.concerto" },
            "2": { "name": "entity.name.type.concerto" }
          }
        },
        {
          "comment": "Impl block: impl Type or impl Trait for Type",
          "match": "\\b(impl)\\s+([A-Za-z_][A-Za-z0-9_]*)(?:\\s+(for)\\s+([A-Za-z_][A-Za-z0-9_]*))?",
          "captures": {
            "1": { "name": "keyword.declaration.concerto" },
            "2": { "name": "entity.name.type.concerto" },
            "3": { "name": "keyword.declaration.concerto" },
            "4": { "name": "entity.name.type.concerto" }
          }
        },
        {
          "comment": "Stage declaration: stage name",
          "match": "\\b(stage)\\s+([a-zA-Z_][a-zA-Z0-9_]*)",
          "captures": {
            "1": { "name": "keyword.declaration.concerto" },
            "2": { "name": "entity.name.function.concerto" }
          }
        },
        {
          "comment": "HashMap/ledger/memory declaration: hashmap name, ledger name, memory name",
          "match": "\\b(hashmap|ledger|memory)\\s+([a-zA-Z_][a-zA-Z0-9_]*)",
          "captures": {
            "1": { "name": "keyword.declaration.concerto" },
            "2": { "name": "variable.other.concerto" }
          }
        },
        {
          "comment": "Import: use path or mod name",
          "match": "\\b(use|mod)\\s+([a-zA-Z_][a-zA-Z0-9_:]*)",
          "captures": {
            "1": { "name": "keyword.other.import.concerto" },
            "2": { "name": "entity.name.namespace.concerto" }
          }
        }
      ]
    },

    "constants": {
      "patterns": [
        {
          "name": "constant.language.boolean.concerto",
          "match": "\\b(true|false)\\b"
        },
        {
          "name": "constant.language.nil.concerto",
          "match": "\\bnil\\b"
        }
      ]
    },

    "strings": {
      "patterns": [
        { "include": "#raw-string-3" },
        { "include": "#raw-string-2" },
        { "include": "#raw-string-1" },
        { "include": "#triple-quoted-string" },
        { "include": "#double-quoted-string" }
      ]
    },

    "raw-string-3": {
      "name": "string.quoted.other.raw.concerto",
      "begin": "r###\"",
      "end": "\"###",
      "beginCaptures": {
        "0": { "name": "punctuation.definition.string.begin.concerto" }
      },
      "endCaptures": {
        "0": { "name": "punctuation.definition.string.end.concerto" }
      }
    },

    "raw-string-2": {
      "name": "string.quoted.other.raw.concerto",
      "begin": "r##\"",
      "end": "\"##",
      "beginCaptures": {
        "0": { "name": "punctuation.definition.string.begin.concerto" }
      },
      "endCaptures": {
        "0": { "name": "punctuation.definition.string.end.concerto" }
      }
    },

    "raw-string-1": {
      "name": "string.quoted.other.raw.concerto",
      "begin": "r#\"",
      "end": "\"#",
      "beginCaptures": {
        "0": { "name": "punctuation.definition.string.begin.concerto" }
      },
      "endCaptures": {
        "0": { "name": "punctuation.definition.string.end.concerto" }
      }
    },

    "triple-quoted-string": {
      "name": "string.quoted.triple.concerto",
      "begin": "\"\"\"",
      "end": "\"\"\"",
      "beginCaptures": {
        "0": { "name": "punctuation.definition.string.begin.concerto" }
      },
      "endCaptures": {
        "0": { "name": "punctuation.definition.string.end.concerto" }
      },
      "patterns": [
        { "include": "#string-interpolation" },
        { "include": "#string-escapes" }
      ]
    },

    "double-quoted-string": {
      "name": "string.quoted.double.concerto",
      "begin": "\"",
      "end": "\"",
      "beginCaptures": {
        "0": { "name": "punctuation.definition.string.begin.concerto" }
      },
      "endCaptures": {
        "0": { "name": "punctuation.definition.string.end.concerto" }
      },
      "patterns": [
        { "include": "#string-interpolation" },
        { "include": "#string-escapes" }
      ]
    },

    "string-interpolation": {
      "name": "meta.interpolation.concerto",
      "begin": "\\$\\{",
      "end": "\\}",
      "beginCaptures": {
        "0": { "name": "punctuation.section.interpolation.begin.concerto" }
      },
      "endCaptures": {
        "0": { "name": "punctuation.section.interpolation.end.concerto" }
      },
      "patterns": [
        { "include": "source.concerto" }
      ]
    },

    "string-escapes": {
      "patterns": [
        {
          "name": "constant.character.escape.unicode.concerto",
          "match": "\\\\u\\{[0-9a-fA-F]+\\}"
        },
        {
          "name": "constant.character.escape.concerto",
          "match": "\\\\[nrt\\\\\"0$]"
        }
      ]
    },

    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.float.concerto",
          "match": "\\b[0-9][0-9_]*\\.[0-9][0-9_]*(?:[eE][+-]?[0-9][0-9_]*)?\\b"
        },
        {
          "name": "constant.numeric.float.concerto",
          "match": "\\b[0-9][0-9_]*[eE][+-]?[0-9][0-9_]*\\b"
        },
        {
          "name": "constant.numeric.hex.concerto",
          "match": "\\b0[xX][0-9a-fA-F][0-9a-fA-F_]*\\b"
        },
        {
          "name": "constant.numeric.binary.concerto",
          "match": "\\b0[bB][01][01_]*\\b"
        },
        {
          "name": "constant.numeric.octal.concerto",
          "match": "\\b0[oO][0-7][0-7_]*\\b"
        },
        {
          "name": "constant.numeric.integer.concerto",
          "match": "\\b[0-9][0-9_]*\\b"
        }
      ]
    },

    "keywords": {
      "patterns": [
        {
          "comment": "Declaration keywords",
          "name": "keyword.declaration.concerto",
          "match": "\\b(let|mut|const|fn|type)\\b"
        },
        {
          "comment": "AI-specific declaration keywords",
          "name": "keyword.declaration.concerto",
          "match": "\\b(model|tool|schema|pipeline|stage|hashmap|ledger|memory|agent|listen|mcp)\\b"
        },
        {
          "comment": "Control flow",
          "name": "keyword.control.concerto",
          "match": "\\b(if|else|match|for|while|loop|break|continue|return)\\b"
        },
        {
          "comment": "Error handling",
          "name": "keyword.control.trycatch.concerto",
          "match": "\\b(try|catch|throw)\\b"
        },
        {
          "comment": "Async",
          "name": "keyword.control.async.concerto",
          "match": "\\b(async|await)\\b"
        },
        {
          "comment": "Import/module",
          "name": "keyword.other.import.concerto",
          "match": "\\b(use|mod)\\b"
        },
        {
          "comment": "Visibility modifier",
          "name": "storage.modifier.concerto",
          "match": "\\b(pub)\\b"
        },
        {
          "comment": "struct/enum/trait/impl",
          "name": "keyword.declaration.concerto",
          "match": "\\b(struct|enum|trait|impl)\\b"
        },
        {
          "comment": "Operator keywords",
          "name": "keyword.operator.concerto",
          "match": "\\b(as|in)\\b"
        },
        {
          "comment": "with keyword",
          "name": "keyword.other.concerto",
          "match": "\\b(with)\\b"
        },
        {
          "comment": "Self reference",
          "name": "variable.language.self.concerto",
          "match": "\\bself\\b"
        },
        {
          "comment": "emit and mock as keywords",
          "name": "keyword.other.concerto",
          "match": "\\b(emit|mock)\\b"
        }
      ]
    },

    "types": {
      "patterns": [
        {
          "comment": "Built-in primitive types",
          "name": "support.type.primitive.concerto",
          "match": "\\b(Int|Float|String|Bool|Nil|Any)\\b"
        },
        {
          "comment": "Built-in compound and AI types",
          "name": "support.type.concerto",
          "match": "\\b(Array|Map|Option|Result|Tuple|Prompt|Response|Schema|Message|ToolCall|ModelRef|HashMapRef|ToolError|HashMap|Ledger|Memory|MemoryRef|AgentRef|ModelBuilder)\\b"
        },
        {
          "comment": "Constructors: Some, None, Ok, Err",
          "name": "support.function.constructor.concerto",
          "match": "\\b(Some|None|Ok|Err)\\b"
        }
      ]
    },

    "function-calls": {
      "patterns": [
        {
          "comment": "Built-in functions (with lookahead for paren)",
          "match": "\\b(emit|env|print|println|panic|typeof|len)(?=\\s*\\()",
          "captures": {
            "1": { "name": "support.function.builtin.concerto" }
          }
        },
        {
          "comment": "Standard library path: std::module::func",
          "match": "\\b(std)(::)([a-zA-Z_][a-zA-Z0-9_]*)(::)([a-zA-Z_][a-zA-Z0-9_]*)",
          "captures": {
            "1": { "name": "entity.name.namespace.concerto" },
            "2": { "name": "punctuation.separator.path.concerto" },
            "3": { "name": "entity.name.namespace.concerto" },
            "4": { "name": "punctuation.separator.path.concerto" },
            "5": { "name": "entity.name.function.concerto" }
          }
        },
        {
          "comment": "Method call: .name(",
          "match": "(?<=\\.)([a-zA-Z_][a-zA-Z0-9_]*)\\s*(?=\\()",
          "captures": {
            "1": { "name": "entity.name.function.method.concerto" }
          }
        },
        {
          "comment": "Function call: name(",
          "match": "\\b([a-zA-Z_][a-zA-Z0-9_]*)\\s*(?=\\()",
          "captures": {
            "1": { "name": "entity.name.function.concerto" }
          }
        }
      ]
    },

    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.pipe.concerto",
          "match": "\\|>"
        },
        {
          "name": "keyword.operator.nil-coalesce.concerto",
          "match": "\\?\\?"
        },
        {
          "name": "keyword.operator.error-propagation.concerto",
          "match": "\\?"
        },
        {
          "name": "keyword.operator.range.concerto",
          "match": "\\.\\.\\.?=?"
        },
        {
          "name": "keyword.operator.arrow.concerto",
          "match": "->"
        },
        {
          "name": "keyword.operator.fat-arrow.concerto",
          "match": "=>"
        },
        {
          "name": "keyword.operator.path.concerto",
          "match": "::"
        },
        {
          "name": "keyword.operator.comparison.concerto",
          "match": "==|!=|<=|>=|<|>"
        },
        {
          "name": "keyword.operator.logical.concerto",
          "match": "&&|\\|\\||!"
        },
        {
          "name": "keyword.operator.assignment.compound.concerto",
          "match": "[+\\-*/%]="
        },
        {
          "name": "keyword.operator.assignment.concerto",
          "match": "="
        },
        {
          "name": "keyword.operator.arithmetic.concerto",
          "match": "[+\\-*/%]"
        }
      ]
    },

    "punctuation": {
      "patterns": [
        {
          "name": "punctuation.terminator.concerto",
          "match": ";"
        },
        {
          "name": "punctuation.separator.comma.concerto",
          "match": ","
        }
      ]
    }
  }
}
